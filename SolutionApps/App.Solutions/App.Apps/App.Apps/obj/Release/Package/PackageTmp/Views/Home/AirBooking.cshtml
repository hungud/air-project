@{
    ViewBag.Title = "BargainFinderMax";
    ViewBag.ActiveTab = "AirBooking";
    Layout = "~/Views/Shared/_MasterLayoutMain.cshtml";
}
<script src="~/Scripts/App/AirBookingScript.js"></script>
<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 id="notforpshead" class="widget-title lighter">Bargain Finder Max</h4>
                <div class="widget-toolbar no-border">
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main padding-2">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <form action="bargain_finder_max/search" class="form-horizontal" method="post" role="form">
                                <div class="row form-group">
                                    <div class="col-md-6">
                                        Origin
            @*@Html.Partial("_AirportsDropdown", new AirportDropdownVM("originAirportCode", "JFK"))*@
                                    </div>

                                    <div class="col-md-6">
                                        Destination:
            @*@Html.Partial("_AirportsDropdown", new AirportDropdownVM("destinationAirportCode", "LAX"))*@
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-3">
                                        POS Company Code
            <input name="requestorCompanyCode" value="TN" class="form-control" />
                                    </div>
                                    <div class="col-md-3">
                                        POS ID
            <input name="requestorId" value="REQ.ID" class="form-control" />
                                    </div>
                                    <div class="col-md-3">
                                        POS TYPE
            <input name="requestorType" value="0.AAA.X" class="form-control" />
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-3">
                                        RPH
            <input name="rph" value="1" class="form-control" />
                                    </div>

                                    <div class="col-md-3">
                                        Passenger Quantity
            <input name="numberOfPassengers" value="1" type="number" class="form-control" />
                                    </div>
                                    <div class="col-md-3">
                                        Passenger Code
            <input name="passengerTypeCode" value="ADT" class="form-control" />
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col-md-3">
                                        <label class="control-label col-xs-12 col-sm-3 no-padding-right">Date:</label>
                                        <div class="input-group col-xs-12 col-sm-12">
                                            <input class="form-control  date-picker  Restrictinput " type="text" name="date-range-picker" id="Startdate" data-date-format="yyyy-MMM-dd" />
                                            <span class="input-group-addon" id="col_start">
                                                <i class="fa fa-calendar bigger-80"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="control-label">to: </label>
                                        <div class="input-group col-xs-12 col-sm-12">
                                            <input class="form-control  date-picker  Restrictinput" type="text" name="date-range-picker" id="endDate" data-date-format="yyyy-MMM-dd" />
                                            <span class="input-group-addon" id="col_end">
                                                <i class="fa fa-calendar bigger-80"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-3">
                                        Departure Date
            <input id="soapW_departureDate" type="date" name="departureDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control datepicker" />
                                    </div>
                                    <div class="col-md-3">
                                        Request type
            <input name="requestType" value="50TINS" class="form-control" />
                                    </div>
                                </div>
                                <input type="submit" value="Search" class="btn btn-success" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
