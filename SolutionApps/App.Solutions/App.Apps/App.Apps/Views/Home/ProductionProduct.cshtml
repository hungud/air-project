@{
    ViewBag.Title = "Contact";
    ViewBag.ActiveTab = "ProductionProduct";
    Layout = "~/Views/Shared/_MasterLayoutMain.cshtml";
}
<script src="~/Scripts/App/ProductionProductScript.js"></script>
<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 id="notforpshead" class="widget-title lighter">Welcome to Production Product</h4>
                <div class="widget-toolbar no-border">
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main padding-2">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <div class="col-xs-12 col-sm-6">
                                <div class="row">
                                    <div class="col-sm-3">
                                        Product ID:
                                    </div>
                                    <div class="col-sm-9">
                                        <input id="ProductID" type="text" name="ProductID" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="submit" value="Search" class="btn btn-success" />
